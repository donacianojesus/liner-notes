# Environment Variables Template
# Copy this to application-local.properties and fill in your values
# DO NOT commit application-local.properties to git

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/linernotes
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password_here

# Redis
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379

# JWT (generate a secure random string)
JWT_SECRET=your-secure-256-bit-secret-key-here
JWT_EXPIRATION=86400000

# Spotify API (get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_API_BASE_URL=https://api.spotify.com/v1

# CORS (your frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Server
SERVER_PORT=8080
